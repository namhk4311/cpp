#include <bits/stdc++.h>
using namespace std;

int main()
{
cout << "Enter your text: \n";
string text;
getline(cin,text,'$');
cout << "========================\n";
cout << text;
return 0;
}

//================================================================

#include <bits/stdc++.h>
using namespace std;

int main()
{
   string name[100];
    int grade[100];
    string major[100];
    char n;
    int N; 
    cout << "Nhap so sinh vien: "; cin >> N; 
    for(int i = 0; i < N; i++)
    {
        std::cin.ignore(32767,'\n');
        cout << "\nNhap ten sinh vien " << i+1 << ": ";
        getline(cin,name[i]);
        cout << "\nNhap Khoa: ";
        getline(cin,major[i]);
        cout << "\nNhap Diem Giai Tich: ";
        cin >> grade[i];
    }
    system("CLS");
    cout << setw(20) << left << "Ten sinh vien";
    cout << setw(20) << left << "Khoa";
    cout << setw(20) << right << "Diem giai tich\n";
    cout << setfill('-');
    cout << setw(60) << "-" << endl;
    cout << setfill(' ');
    for(int i = 0; i < N; i++)
    {
        cout << setw(20) << left << name[i];
        cout << setw(20) << left << major[i];
        cout << setw(12) << right << grade[i] << "\n";
    }
}
